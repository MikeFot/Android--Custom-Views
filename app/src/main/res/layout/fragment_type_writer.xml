<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.michaelfotiadis.androidcustomviewsdemos.fragments.TypewriterFragment"
    android:weightSum="1">

    <Spinner
        android:id="@+id/mode_spinner"
        android:layout_width="@dimen/button_large_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:id="@+id/speed_spinner"
        android:layout_width="@dimen/button_large_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <com.michaelfotiadis.androidcustomviews.text.Typewriter
        android:id="@+id/typewriter_view"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
