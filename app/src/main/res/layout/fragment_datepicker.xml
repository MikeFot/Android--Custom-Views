             android:layout_height="match_parent"
             tools:context="com.michaelfotiadis.androidcustomviewsdemos.fragments.DateEditTextFragment">

    <com.michaelfotiadis.androidcustomviews.edittext.DateEditText
        android:id="@+id/edit_text"
